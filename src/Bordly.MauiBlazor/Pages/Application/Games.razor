@page "/games"

@using Bordly.MauiBlazor.Pages.Application.Components;

<MudPaper Class="pa-16 ma-2">
    <MudStack>
        <Avatar />
        <MudList>
                @foreach (var game in Controller.Games)
                {
                    <MudListItem>
                        <MudLink Color="Color.Default" Href="@game.Uri">@game.Name</MudLink>
                    </MudListItem>
                }
        </MudList>
        <MudStack Row="true">
            <MudTextField @bind-Value="Controller.NewGameName" />
            <MudButton OnClick="Controller.CreateGameAsync">New Game</MudButton>
        </MudStack>
    </MudStack>
</MudPaper>






